<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.yisonpylkita.oruko_client.ItemInfo">

    <TableLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        android:padding="10dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView android:text="name" android:paddingRight="10dp"/>
            <TextView android:text="" android:id="@+id/name"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView android:text="id" android:paddingRight="10dp"/>
            <TextView android:text="" android:id="@+id/id"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView android:text="description" android:paddingRight="10dp"/>
            <TextView android:text="" android:id="@+id/description"/>
        </TableRow>
    </TableLayout>
</android.support.constraint.ConstraintLayout>
